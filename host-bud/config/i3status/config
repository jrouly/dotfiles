# i3status configuration file.
# see "man i3status" for documentation.

general {
  colors = true
  interval = 5
}

# order += "ipv6"
order += "disk /"
order += "volume master"
# order += "wireless _first_"
# order += "ethernet _first_"
order += "battery all"
# order += "load"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery all {
  format = "%status %percentage %remaining"
}

tztime local {
  format = "%Y-%m-%d %H:%M"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%avail"
}

volume master {
  format = "♪ %volume"
  format_muted = "♪ %volume mute"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
